{{ output_opt(id_base="ascii",value="0",title="ASCII",sel="true") }}
{{ output_opt(id_base="unisuits",value="1",title="Unicode Suits") }}
{{ output_opt(id_base="unicards",value="2",title="Unicode Cards") }}
</fieldset>
<br />
<button id="clear_output" title="Clear the Output Box">Clear Output</button>
</div>

{% endmacro %}


<label id="output_label" for="output">Output:</label><br />

